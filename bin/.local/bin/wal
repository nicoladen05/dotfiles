#!/usr/bin/python
import requests
from os import system
from sys import argv

URL = 'https://source.unsplash.com/random/'
RES = '2560x1440'
FILE_LOCATION = '/home/nico/pix/wal/'

if argv[1:]:
    response = requests.get(URL + RES + '/?' + str(argv[1:]))
else:
	response = requests.get(URL + RES + '/?wallpaper')

file = open(FILE_LOCATION + 'wallpaper.png', 'wb')
file.write(response.content)
file.close()

system('feh --bg-fill ' + FILE_LOCATION + 'wallpaper.png')
